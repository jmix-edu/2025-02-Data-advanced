<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://grandListView.title"
      focusComponent="grandsDataGrid">
    <data>
        <collection id="grandsDc"
                    class="com.company.projectmanagementdata.entity.Grand">
            <fetchPlan extends="_base">
                <property name="dad1">
                    <property name="son1">
                        <property name="country"/>
                    </property>
                </property>
                <property name="dad2">
                    <property name="son2">
                        <property name="age"/>
                    </property>
                </property>
            </fetchPlan>
            <loader id="grandsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Grand e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="grandsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="grandsDataGrid.create"/>
            <button id="editButton" action="grandsDataGrid.edit"/>
            <button id="removeButton" action="grandsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="grandsDl"/>
        </hbox>
        <dataGrid id="grandsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="grandsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="id"/>
                <column property="dad1.son1.country"/>
                <column property="dad2.son2.age"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
