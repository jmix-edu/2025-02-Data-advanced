<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://workloadView.title">
    <data>
        <keyValueCollection id="workloadDc">
            <loader id="workloadDl">
                <query>
                    <![CDATA[select e.assignee, sum(e.estimatedEfforts) from Task_ e
                               where e.closed = false group by e.assignee]]>
                </query>
            </loader>
            <properties>
                <property name="assignee" class="com.company.projectmanagementdata.entity.User"/>
                <property name="estimatedEfforts" datatype="long"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox>
            <button id="refreshButton" action="workloadDataGrid.refresh"/>
            <button id="showInfoButton" action="workloadDataGrid.showInfo"/>
        </hbox>
        <dataGrid id="workloadDataGrid" dataContainer="workloadDc" minWidth="100px" width="100%">
            <actions>
                <action id="refresh" type="list_refresh"/>
                <action id="showInfo" text="msg://showInfo.text" type="list_itemTracking"/>
            </actions>
            <columns>
                <column property="assignee" header="msg://workloadView.assignee"/>
                <column property="estimatedEfforts" header="msg://workloadView.estimatedEfforts"/>
            </columns>
        </dataGrid>
    </layout>
</view>