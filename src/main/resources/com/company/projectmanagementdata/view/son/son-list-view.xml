<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://sonListView.title"
      focusComponent="sonsDataGrid">
    <data>
        <collection id="sonsDc"
                    class="com.company.projectmanagementdata.entity.Son">
            <fetchPlan extends="_base"/>
            <loader id="sonsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Son e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="sonsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="sonsDataGrid.create"/>
            <button id="editButton" action="sonsDataGrid.edit"/>
            <button id="removeButton" action="sonsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="sonsDl"/>
        </hbox>
        <dataGrid id="sonsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="sonsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="age"/>
                <column property="country"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
